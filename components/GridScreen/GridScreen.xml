<?xml version="1.0" encoding="UTF-8"?>
<component name="GridScreen" extends="Group" initialFocus="RowList"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd"
>
    <script type="text/brightscript" uri="GridScreen.brs" />
    <interface>
        <field id="content" type="node" alias="RowList.content" />
    </interface>
    <children>
        <Label
            id="titleLabel"
            width="1020"
            translation="[130,200]"
            font="font:LargeSystemFont"
        />
        <RowList
            itemComponentName="RowListItemComponent"
            id="rowList"
            translation="[80,250]"
            numRows="3"
            rowItemSize="[[220,140]]"
            rowItemSpacing="[[15,10]]"
            itemSize="[1100,250]"
            rowLabelOffset="[[50,20]]"
            focusXOffset="[50]"
            showRowLabel="[true]"
            rowFocusAnimationStyle="floatingfocus"
        />
    </children>
</component>