<?xml version="1.0" encoding="UTF-8"?>
<component name="MainScene" extends="Scene">
    <script type="text/brightscript" uri="MainScene.brs" />
    <script type="text/brightscript" uri="UILogic/ScreenStackLogic.brs" />
    <script type="text/brightscript" uri="UILogic/ContentTaskLogic.brs" />
    <script type="text/brightscript" uri="UILogic/GridScreenLogic.brs" />
    <children>
        <!-- Overhang   -->
        <Overhang
            id="overhang"
            title="Home"
            showClock="true"
            showOptions="false"
            logoUri="pkg:/images/hd_overhang_logo.png"
            translation="[0,0]"
        />
        <!-- Loading Indicator should be visible only in case of waiting for content -->

        <Label
            id="loadingIndicator"
            text="Loading..."
            width="1280"
            height="720"
            translation="[0,0]"
            horizAlign="center"
            vertAlign="center"
            font="font:MediumBoldSystemFont"
        />
        <Animation
            id="fadeAnim"
            duration="0.8"
            repeat="true"
            easeFunction="linear"
        >
            <FloatFieldInterpolator
                fieldToInterp="loadingIndicator.opacity"
                key="[0.0, 0.5, 1.0]"
                keyValue="[0.5, 1.0, 0.5]"
            />
        </Animation>
    </children>
</component>