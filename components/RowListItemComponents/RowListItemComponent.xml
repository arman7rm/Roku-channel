<component name="RowListItemComponent" extends="Group"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
    <interface>
        <field id="itemContent" type="node" onChange="OnContentSet" />
        <field id="focusPercent" type="float" onChange="showfocus" />
        <field id="rowFocusPercent" type="float" onChange="showrowfocus" />
    </interface>
    <script type="text/brightscript" uri="RowItemListComponent.brs" />
    <children>
        <Poster
            id="poster"
            translation="[10,10]"
            width="200"
            height="112"
            loadWidth="200"
            loadHeight="112"
            loadDisplayMode="scaleToFit"
            scaleRotateCenter="[100.0, 56.0]"
        >
        </Poster>
        <Rectangle
            id="fallback"
            visible="false"
            translation="[10,10]"
            width="200"
            height="112"
            scaleRotateCenter="[100.0, 56.0]"
            color="0x000000FF">

            <Label
                id="fallbackText"
                translation="[10, 10]"
                width="180"
                height="100"
                horizAlign="center"
                vertAlign="center"
                font="font:SmallBoldSystemFont"
                color="0xFFFFFFFF"
                text="Error loading Image"
            />
        </Rectangle>
    </children>
</component>