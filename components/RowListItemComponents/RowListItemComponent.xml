<component name="RowListItemComponent" extends="Group"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
    <interface>
        <field id="itemContent" type="node" onChange="OnContentSet" />
    </interface>
    <script type="text/brightscript" uri="RowItemListComponent.brs" />
    <children>
        <Poster
            id="poster"
            translation="[10,10]"
            width="200"
            height="120"
            loadWidth="200"
            loadHeight="120"
            loadDisplayMode="scaleToFit"
        />

        <!-- 🔁 Animation node must be outside Poster to work on poster.scale -->
        <Animation
            id="scaleAnimation"
            duration="0.2"
            easeFunction="linear"
            repeat="false"
        >
            <Vector2DFieldInterpolator
                id="scaleInterpolator"
                key="[0.0, 1.0]"
                keyValue="[[1.0,1.0], [1.1,1.1]]"
                fieldToInterp="poster.scale"
            />
        </Animation>
    </children>
</component>