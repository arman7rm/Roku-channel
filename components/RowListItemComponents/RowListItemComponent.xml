<component name="RowListItemComponent" extends="Group"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
    <interface>
        <field id="itemContent" type="node" onChange="OnContentSet" />
        <field id="focusPercent" type="float" onChange="showfocus" />
        <field id="rowFocusPercent" type="float" onChange="showrowfocus" />
    </interface>
    <script type="text/brightscript" uri="RowItemListComponent.brs" />
    <children>
        <Poster
            id="poster"
            translation="[10,10]"
            width="200"
            height="120"
            loadWidth="200"
            loadHeight="120"
            loadDisplayMode="scaleToFit"
            scaleRotateCenter = "[ 100.0, 60.0 ]"  
        >
            <Rectangle
                id="itemMask"
                color="0x000000FF"
                opacity="0.75"
                width="200"
                height="120"
                scaleRotateCenter="[ 100.0, 60.0 ]" />
        </Poster>

    </children>
</component>